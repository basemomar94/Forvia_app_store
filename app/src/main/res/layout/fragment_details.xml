<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/default_fields_space"
    android:layout_marginEnd="@dimen/default_fields_space">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vertical_guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vertical_guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <ImageView
                android:id="@+id/app_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_x"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/label_text"
                android:id="@+id/app_name_text"
                android:layout_marginTop="@dimen/default_fields_space"
                android:text="App Name"
                android:textSize="@dimen/large_text_size"
                app:layout_constraintEnd_toStartOf="@+id/vertical_guideline_end"
                app:layout_constraintStart_toStartOf="@+id/vertical_guideline_start"
                app:layout_constraintTop_toBottomOf="@id/app_thumbnail" />

            <ImageView
                android:layout_marginTop="@dimen/default_fields_space"
                android:id="@+id/rating_icon"
                android:layout_width="@dimen/icon_size_xlarge"
                android:layout_height="@dimen/icon_size_xlarge"
                android:contentDescription="Rating Icon"
                app:layout_constraintStart_toStartOf="@id/vertical_guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/app_name_text" />

            <TextView
                android:id="@+id/rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="5.5"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintStart_toEndOf="@id/rating_icon"
                app:layout_constraintTop_toTopOf="@id/rating_icon"
                app:layout_constraintBottom_toBottomOf="@id/rating_icon" />

            <!-- Description -->
            <TextView
                android:layout_marginTop="@dimen/default_fields_space"
                android:id="@+id/app_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="App description goes here."
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/vertical_guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/download_button" />

            <!-- Download Button -->
            <Button
                android:id="@+id/download_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download"
                app:layout_constraintBottom_toBottomOf="@+id/rating_icon"
                app:layout_constraintEnd_toStartOf="@+id/vertical_guideline_end"
                app:layout_constraintTop_toTopOf="@+id/rating_icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
